@page
@model MyAuthRazor.Identity.Pages.Auth.LoginModel
@{
}

<h2>Login</h2>

<div class="mt-xl-5">
    <section class="container-fluid">
        <form method="post">
            <div class="d-flex justify-content-center">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input asp-for="AuthUser.UserName" type="text" class="form-control" />
                        <label asp-for="AuthUser.UserName" class="form-label">Email</label>
                        <span asp-validation-for="AuthUser.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="AuthUser.Password" type="password" class="form-control" />
                        <label asp-for="AuthUser.Password" class="form-label">Password</label>
                        <span asp-validation-for="AuthUser.Password" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="btn btn-primary mt-3" value="Login" type="submit" />
                    </div>
                </div>
                <div class="col-sm-4">
                </div>
            </div>
        </form>
    </section>
</div>

